    <SurveyPrompt Title="How is Blazor working for you?" />*@
@inject NavigationManager NavigationManager
<button class="start-trial my-3 col-1" @onclick="Home">Back</button>
<div class="container pt-3">
     <div class="row">
          <div class="col-3">
               <button disabled class="start-trial my-3 col-12" @onclick="Home">all videos selected</button>
               <button disabled class="start-trial my-3 col-12" @onclick="Home">Select all</button>
          </div>
          <div class="col-6">
            <div class="title-npt">Video Panel</div>
          </div>
          <div class="col-3">
                    
            <div class="input-group col-12">
              <input type="search" placeholder="What're you searching for?" aria-describedby="button-addon1" class="form-control border-0 bg-light col-12">
              <div class="input-group-append">
                <button id="button-addon1" type="submit" class="btn btn-link text-primary"><i class="fa fa-search"></i></button>
              </div>
            </div>
               <button disabled class="start-trial my-3 col-12" @onclick="Home">Delete all</button>
          </div>
     </div>
     <div class="row container">
     <div class="col-12 p-0 m-0">
          <ul class="list-group">
               <div class="row">
               @for(int i = 0 ; i < 20 ; i++)
               {
                    <div class="col-4 mb-1">
                         <a  class="list-group-item  d-flex justify-content-between align-items-center">
                              @* Checkbox *@
                              <div>
                                   <span>
                                   <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                   </span>
                                   <div class="flex-column">
                                   @i Video File 
                                   <p><small>Monitor Thefy</small></p>
                                   </div>
                              </div>
                              
                                   <img src="/images/photo-film-solid.svg" class="img-fluid" alt="quixote" width="40">
                         </a>
                    </div>
               }
               </div>
          </ul>
     </div>
     </div>
</div>


@code {
    void Home()
    {
        NavigationManager.NavigateTo("/");
    }
}

